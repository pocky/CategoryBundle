<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_category.manager.category">%black_category.category.manager%</parameter>
    </parameters>

    <services>
        <service id="black_category.document.manager" alias="doctrine.odm.mongodb.document_manager" />

        <service id="black_category.manager.category" class="%black_category.manager.category%">
            <argument type="service" id="black_category.document.manager" />
            <argument>%black_category.category.model.class%</argument>
        </service>
    </services>
</container>
